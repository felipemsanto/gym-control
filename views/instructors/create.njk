{% extends "layout.njk" %}


{% block content %}

<div class="card" method="POST" action="/instructors">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/8969654/500x200) no-repeat center center / cover"></section>
    <section class="details">

        <h3>Novo instrutor</h3>

        <div class="item">
            <div>Avatar URL</div>
            <div>
                <input 
                    type="url" 
                    name="avatar_url" 
                >
            </div>
        </div>

         <div class="item">
            <div>Idade</div>
            <div>29</div>
        </div>

         <div class="item">
            <div>Sexo</div>
            <div>Masculino</div>
        </div>

         <div class="item">
            <div>Acompanhamento</div>
            <div>
                <span>Musculação</span>
                <span>Crossfit</span>
            </div>
        </div>

         <div class="item">
            <div>Desde</div>
            <div>01/01/2019</div>
        </div>



    </section>
</div>

{% endblock content %}